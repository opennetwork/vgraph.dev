{
  "name": "@opennetwork/vgraph.dev",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && npm run tslint && npm run build:nofus && parcel build dist/index.html",
    "build:nofus": "tsc --declaration && node -r esm correct-import-extensions.js && node -r esm ./generate-site.js && cp ./browser-environment.js ./dist/environment.js",
    "watch": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "start": "rm -rf dist && npm run build:nofus && concurrently \"npm run watch\" \"parcel dist/index.html -d website --open\""
  },
  "peerDependencies": {},
  "dependencies": {
    "@opennetwork/vdom": "^4.1.0",
    "@opennetwork/vnode": "^14.0.0",
    "@opennetwork/vnode-fragment": "^3.0.0",
    "@opennetwork/vnode-hooks": "^3.0.0",
    "htm": "^2.2.1",
    "iterable": "^5.6.0",
    "lit-html": "^1.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opennetwork/vgraph.dev.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-async-generator-functions": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@types/jsdom": "^12.2.4",
    "babel-plugin-htm": "^2.2.0",
    "concurrently": "^4.1.2",
    "esm": "^3.2.25",
    "filehound": "^1.17.3",
    "jsdom": "^15.1.1",
    "parcel-bundler": "^1.12.3",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
